@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-secondary"> <i class="far fa-plus-square"></i> &nbsp; Create Product</a>
        </div>
    </div>
    <div class="row border p-1">
        <div class="col-4 font-weight-bold">Name</div>
        <div class="col-4 font-weight-bold">Price</div>
        <div class="col-4 font-weight-bold">Options</div>
    </div>
    @foreach(var product in Model)
    {
        <div class="row align-items-center border p-1">
            <div class="col-4 pb-3">@product.Name</div>
            <div class="col-4 pb-3">@product.Price</div>
            <div class="col-4">
                <div class="row pl-2">
                    <a asp-controller="Product" asp-route-productId="@product.Id" asp-action="Edit" class="btn btn-secondary mx-2"><i class="fas fa-pen"></i></a>
                    <form asp-controller="Product" asp-action="Delete" asp-route-productId="@product.Id" method="post">
                        <button class="btn btn-danger mx-2" type="submit"><i class="fas fa-ban"></i></button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>