@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">Create New Category</a>
        </div>
    </div>
    <div class="row">
        <div class="col">Name</div>
        <div class="col">Display Order</div>
        <div class="col">Options</div>
    </div>
    @foreach(var category in Model)
    {
        <div class="row align-items-center">
            <div class="col pb-3">@category.Name</div>
            <div class="col">@category.DisplayOrder</div>
            <div class="col">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-rout-Id="@category.Id" asp-action="Edit" class="btn btn-secondary mx-2">Edit</a>
                    <a asp-controller="Category" asp-rout-Id="@category.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                </div>
            </div>
        </div>
    }
</div>