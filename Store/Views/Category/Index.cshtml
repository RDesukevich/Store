@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">Create New Category</a>
        </div>
    </div>
    @foreach(var category in Model)
    {
        <div>@category.Name</div>
    }
</div>